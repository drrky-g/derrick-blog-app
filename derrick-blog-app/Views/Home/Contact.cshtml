@model derrick_blog_app.Models.EmailModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Send me a message</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <!-- Name input-->
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder="Your name here." })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <!-- Email address input-->
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Your email address" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <!-- subject input -->
    <div class="form-group">
        @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(m => m.Subject)
        </div>
    </div>
    <!--  body input-->
    <div class="form-group">
        @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Body, new { @class = "form-control", placeholder = "Your message" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <!-- submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Send" />
        </div>
    </div>
}