@model IEnumerable<derrick_blog_app.Models.BlogPost>

@{
    ViewBag.Title = "AdminIndex";
}

<h2>AdminIndex</h2>



    @foreach (var item in Model)
    {
        <div class="single-blog-area blog-style-2 mb-50 wow fadeInUp" data-wow-delay="0.4s" data-wow-duration="1000ms">
            <div class="row">
                <div class="col-12">
                    
                </div>
                <div class="col-12">
                    <!-- Blog Content -->
                    <div class="single-blog-content mt-50">
                        <div class="post-date">
                            <a href="#"><span>@item.Created.ToString("MM/dd/yyyy")</span><!--Posted date--></a>
                        </div>
                        <div class="line"></div>
                        <a href="#" class="post-tag">Lifestyle</a>
                        <h4><a href="#" class="post-headline"><!-- title -->@item.Title</a></h4>
                        <p><!-- abstract -->@item.Abstract</p>
                        <div class="post-meta">
                            <p>3 comments<!-- show number of comments with virtual nav somehow?--></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- REPEATING DIV ENDS HERE -->

        <!-- Link to read post -->
        <div class="load-more-btn mt-50 mb-100 wow fadeInUp" data-wow-delay="0.7s" data-wow-duration="1000ms">
            @Html.ActionLink("Edit Post", "Edit", new { id = item.Id }, new { @class = "btn original-btn" })
            @Html.ActionLink("View Post", "Details", new { slug = item.Slug }, new { @class = "btn original-btn" })
            @Html.ActionLink("Delete Post", "Delete", new { id = item.Id }, new { @class = "btn original-btn" })

        </div>

    }









    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Abstract)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Slug)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Body)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MediaUrl)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Published)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Updated)
                        </th>
                        <th></th>
                    </tr>

                   